<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="5dp"
    app:contentPadding="10dp"
    android:layoutDirection="@string/layout_direction"
    app:layout_constraintHorizontal_chainStyle="packed">

    <RelativeLayout
        android:id="@+id/rest_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.obs.CustomTextView
            android:id="@+id/suggest_rest_name"
            style="@style/ClanProForUBER_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/rest_image"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="The Real burger store" />

        <com.obs.CustomTextView
            android:id="@+id/other_suggest_name"
            style="@style/ClanProForUBER_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/suggest_rest_name"
            android:layout_toStartOf="@+id/rest_image"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Specila burger with Cheese "
            android:textColor="@color/payment_method" />

        <com.obs.CustomTextView
            android:id="@+id/suggest_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/other_suggest_name"
            android:layout_marginTop="20dp"
            android:text="$ 155" />

        <ImageView
            android:id="@+id/rest_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_launcher" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>