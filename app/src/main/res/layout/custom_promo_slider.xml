<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="@string/layout_direction">

    <RelativeLayout
        android:id="@+id/image_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/promo_image"
            android:layout_width="match_parent"
            android:layout_height="193dp"
            android:scaleType="fitXY" />

        <View
            android:layout_width="match_parent"
            android:layout_height="193dp"
            android:background="@drawable/background_dim_image" />

        <com.obs.CustomTextView
            android:id="@+id/title"
            style="@style/ClanProForUBER_News"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text="@string/special_discount"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <com.obs.CustomTextView
            android:id="@+id/description"
            style="@style/ClanProForUBER_News"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title"
            android:layout_alignStart="@+id/title"
            android:layout_below="@+id/title"
            android:layout_marginTop="90dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="offer on top Restaurant day by day"
            android:textColor="@color/white"
            android:textSize="10dp" />


    </RelativeLayout>

