<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingEnd="10dp"
    android:layoutDirection="@string/layout_direction"
    android:paddingStart="10dp">


    <RelativeLayout
        android:id="@+id/rltOrdersList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.obs.CustomTextView
            android:id="@+id/item_count"
            style="@style/ClanProForUBER_News"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/square_shape"
            android:text="1"
            android:textColor="@color/apptheme"
            android:textSize="12dp" />

        <com.obs.CustomTextView
            android:id="@+id/item_name"
            style="@style/ClanProForUBER_News"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/item_count"
            android:layout_toStartOf="@+id/item_price"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:text="Veg Samosa "
            android:textColor="@color/total_text_colur"
            android:textSize="13sp" />

        <com.obs.CustomTextView
            android:id="@+id/item_price"
            style="@style/ClanProForUBER_News"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="$78"
            android:textColor="@color/total_text_colur"
            android:textSize="12dp" />
    </RelativeLayout>

    <com.obs.CustomTextView
        android:id="@+id/addtional_charge"
        style="@style/ClanProForUBER_News"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rltOrdersList"
        android:layout_marginStart="42dp"
        android:layout_marginTop="5dp"
        android:text="Addtional charges ($ 3.00)"
        android:textColor="@color/payment_method"
        android:textSize="12dp"
        android:visibility="gone" />

</RelativeLayout>