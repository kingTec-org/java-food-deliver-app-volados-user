<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="@string/layout_direction"
    tools:context="gofereats.views.main.subviews.EntryActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/entry_layout"
        android:scaleType="fitXY"
        android:src="@drawable/entry_page_1" />

    <View
        android:id="@+id/fade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/entry_layout"
        android:background="@drawable/background_white_below" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="22dp"
        android:src="@drawable/applogo"
        android:id="@+id/applogo"/>

    <RelativeLayout
        android:id="@+id/entry_layout"
        android:layout_above="@+id/rltlanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.obs.CustomButton
            android:id="@+id/login_button"
            style="@style/ClanProForUBER_Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/ripple_effect"
            android:padding="15dp"
            android:text="@string/log_in_with_gofer"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <com.obs.CustomButton
            android:id="@+id/register_button"
            style="@style/ClanProForUBER_Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_button"
            android:background="@drawable/ripple_effect_white"
            android:padding="20dp"
            android:text="@string/register"
            android:textAllCaps="true"
            android:textColor="@color/apptheme"
            android:textSize="12sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rltlanguage"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/top_border"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/languagetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/language"
            android:textColor="@color/text_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@+id/languagetext"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/apptheme"
            android:textSize="16sp"

            />
    </RelativeLayout>


</RelativeLayout>
