<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="@string/layout_direction"
    tools:context="gofereats.views.main.subviews.wallet.AddWalletActivity">

    <RelativeLayout
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/ivBackArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:scaleX=".6"
            android:scaleY=".6"
            android:src="@drawable/gobackleftarrowwhite"
            android:tint="@color/black"
            android:visibility="visible" />


        <com.obs.CustomTextView
            style="@style/ClanProForUBER_News"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ivBackArrow"
            android:gravity="center_vertical"
            android:text="@string/wallet"
            android:textColor="@color/black"
            android:textSize="22dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/back"
        android:layout_marginStart="13dp"
        android:layout_marginTop="52dp">

        <ImageView
            android:id="@+id/ivWalletImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/wallet" />

        <com.obs.CustomTextView
            android:id="@+id/tvWallet"
            style="@style/ClanProForUBER_News"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivWalletImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/your_wallet_amount_is"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <com.obs.CustomTextView
            android:id="@+id/tvWalletAmount"
            style="@style/ClanProForUBER_News"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvWallet"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="$150"
            android:textColor="@color/black"
            android:textSize="25dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rltAddAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <com.obs.CustomButton
            android:id="@+id/btnAddAmount"
            style="@style/ClanProForUBER_News"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/apptheme"
            android:text="@string/add_amount"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>

</RelativeLayout>
